{
  "name": "graphql-fullstack-app",
  "version": "1.0.0",
  "scripts": {
    "start:client": "cd client && react-scripts start",
    "build:client": "cd client && react-scripts build",
    "test:client": "cd client && react-scripts test",
    "eject:client": "cd client && react-scripts eject",
    "build:server": "babel server/src -d server/build",
    "start:server": "npm run build:server && node server/build",
    "restart:server": "rimraf server/build && npm run start:server",
    "dev:server": "nodemon --exec npm run restart:server",
    "start": "concurrently --kill-others-on-fail \"npm run dev:server\" \"npm run start:client\""
  },
  "dependencies": {
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.5",
    "@testing-library/user-event": "^12.8.3",
    "body-parser": "^1.18.3",
    "express": "^4.16.4",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-scripts": "4.0.3",
    "web-vitals": "^1.1.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.13.10",
    "@babel/core": "^7.13.10",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/preset-env": "^7.13.10",
    "concurrently": "^4.0.1",
    "nodemon": "2.0.7",
    "rimraf": "^3.0.2"
  }
}
