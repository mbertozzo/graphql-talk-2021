{
  "name": "graphql-fullstack-app",
  "version": "1.0.0",
  "scripts": {
    "postinstall": "(cd client && npm install); (cd server && npm install)",
    "client": "cd client && npm start",
    "server": "cd server && npm start",
    "dev": "concurrently --kill-others-on-fail \"npm run server\" \"npm run client\""
  },
  "devDependencies": {
    "concurrently": "^4.0.1"
  }
}
